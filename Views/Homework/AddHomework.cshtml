@model Homework
@using System.Globalization;
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Add Work";
}

<div class="container mt-5">
    <div class="row align-items-stretch">
        <div class="col-md-7 d-flex">
            <div class="card shadow-sm flex-fill">
                <div class="card-body">
                    <div class="project-header">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-pen m-3"></i>
                            <div>
                                <h5 class="card-title">@Model.Name</h5>
                                <p class="text-small">@Model.ApplicationUser.Name @Model.ApplicationUser.Surname &middot; @(Model.CreatedAt.ToString("yyyy-MM-dd") == DateTime.Now.ToString("yyyy-MM-dd") ? Model.CreatedAt.ToString("HH:mm") : Model.CreatedAt.ToString("dMMMM", CultureInfo.CreateSpecificCulture("en-US")))</p>
                            </div>
                        </div>
                    </div>

                    <div class="project-info">
                        <p><strong>100 puan</strong></p>
                        <span class="text-small">Due @Model.DueDate.ToString("dMMMM", CultureInfo.CreateSpecificCulture("en-US")) @Model.DueDate.ToString("HH:mm")</span>
                    </div>

                    <hr>

                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container mt-5">
    <h1 class="mb-4">Add Homework</h1>
    <form method="post" class="form" asp-action="AddHomework" asp-route-ClassroomId="@Model.ClassRoom.Id" asp-route-HomeworkId="@Model.Id">
        <div class="mb-3">
            <label for="homework-description" class="form-label">Your Homework</label>
            <textarea name="HwText" class="form-control" id="homework-description" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit Homework</button>
    </form>
</div>
